<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:PL.Convert="clr-namespace:PL.Convert"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#B0C4B1" MouseDown="return_back">
    <Window.Resources>
        <PL.Convert:NotIsEnableToVisibilityConverter x:Key="myConverter"></PL.Convert:NotIsEnableToVisibilityConverter>
    </Window.Resources>
    <Grid>
        <Border Margin="0,-8,0,372">
            <Button Width="80" Margin="0,5,720,0" >
                <Image  Source="/images/Logo.jpg" Stretch="Fill"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" Width="80"/>
            </Button>
        </Border>
        <Frame x:Name="frame" Height="350" Margin="0,50,0,0"></Frame>
        <Border Height="350" Margin="0,50,0,0" BorderBrush="Black"  />
        <Button x:Name="manager" Content="מנהל"  Padding="15" HorizontalAlignment="Left" Margin="496,203,0,0" VerticalAlignment="Top" Click="manager_Click" Background="#FF1F2421" Foreground="#FFDCE1DE" Width="136" Height="64" FontSize="20" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="customer" Content="לקוח" Padding="15" HorizontalAlignment="Left" Margin="172,203,0,0" VerticalAlignment="Top" Click="customer_Click" Background="#FF1F2421" Foreground="#FFDCE1DE" Width="137" Height="64" FontSize="20" FontWeight="Bold" FontStyle="Normal">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="katelog" Content="לצפיה בקטלוג" Padding="7" Visibility="Hidden" HorizontalAlignment="Left" Margin="136,290,0,0" VerticalAlignment="Top" Click="Katelog_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Button x:Name="cart" Content="סל הקניות שלי" Padding="7"  Visibility="Hidden" HorizontalAlignment="Left" Margin="136,337,0,0" VerticalAlignment="Top" Click="cart_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Label x:Name="password" Content="Password" HorizontalAlignment="Left" Margin="400,277,0,0" VerticalAlignment="Top" Foreground="#FF1F2421" FontSize="15" FontWeight="Bold"  Height="29" Width="90" Visibility="{Binding ElementName=manager, Path=IsEnabled, Converter={StaticResource myConverter},Mode=TwoWay}" />
        <PasswordBox x:Name="enter_password" Background="#FFDCE1DE" HorizontalAlignment="Left"  Margin="483,281,0,0" VerticalAlignment="Top" Width="164" Height="25" Visibility="{Binding ElementName=password, Path=Visibility, Mode=TwoWay}"  />
        <Button x:Name="confirm" Content="כניסה" HorizontalAlignment="Left" Margin="530,311,0,0" Width="70" Height="20" VerticalAlignment="Top" Click="check_password" Background="#FF1F2421" Foreground="#FFDCE1DE" Visibility="{Binding ElementName=password, Path=Visibility, Mode=TwoWay}" />
        <Button x:Name="products" Content="ניהול מוצרים" Padding="7" Visibility="Hidden"  HorizontalAlignment="Left" Margin="460,337,0,0" VerticalAlignment="Top" Click="products_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Button x:Name="orders" Content="ניהול הזמנות" Padding="7" Visibility="Hidden" HorizontalAlignment="Left" Margin="460,290,0,0" VerticalAlignment="Top" Click="orders_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="136,67,0,0" VerticalAlignment="Top" Width="200" />
        <Image HorizontalAlignment="Left" Height="106" Margin="511,81,0,0" VerticalAlignment="Top" Width="118" Source="..\PL\images\manager.png" />


    </Grid>
</Window>
