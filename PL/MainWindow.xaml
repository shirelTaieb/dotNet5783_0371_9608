<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#B0C4B1" MouseDown="return_back">
    <Grid>
        <Frame x:Name="Main" />
        <Button x:Name="manager" Content="מנהל"  Padding="15" HorizontalAlignment="Left" Margin="496,153,0,0" VerticalAlignment="Top" Click="manager_Click" Background="#FF1F2421" Foreground="#FFDCE1DE" Width="136" Height="64" FontSize="20" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="customer" Content="לקוח" Padding="15" HorizontalAlignment="Left" Margin="172,153,0,0" VerticalAlignment="Top" Click="customer_Click" Background="#FF1F2421" Foreground="#FFDCE1DE" Width="137" Height="64" FontSize="20" FontWeight="Bold" FontStyle="Normal">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="katelog" Content="לצפיה בקטלוג" Padding="7" Visibility="Hidden" HorizontalAlignment="Left" Margin="136,253,0,0" VerticalAlignment="Top" Click="Katelog_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Button x:Name="cart" Content="סל הקניות שלי" Padding="7"  Visibility="Hidden" HorizontalAlignment="Left" Margin="136,300,0,0" VerticalAlignment="Top" Click="cart_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Label x:Name="password" Content="Password" HorizontalAlignment="Left" Margin="400,222,0,0" VerticalAlignment="Top" Foreground="#FF1F2421" FontSize="15" FontWeight="Bold" Visibility="Hidden" Height="29" Width="90"/>
        <PasswordBox x:Name="enter_password" Background="#FFDCE1DE" HorizontalAlignment="Left"  Margin="483,226,0,0" VerticalAlignment="Top" Width="164" Height="25" Visibility="Hidden" />
        <Button x:Name="confirm" Content="כניסה" HorizontalAlignment="Left" Margin="530,256,0,0" Width="70" Height="20" VerticalAlignment="Top" Click="check_password" Background="#FF1F2421" Foreground="#FFDCE1DE" Visibility="Hidden"/>
        <Button x:Name="products" Content="ניהול מוצרים" Padding="7" Visibility="Hidden"  HorizontalAlignment="Left" Margin="460,330,0,0" VerticalAlignment="Top" Click="products_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Button x:Name="orders" Content="ניהול הזמנות" Padding="7" Visibility="Hidden" HorizontalAlignment="Left" Margin="460,266,0,0" VerticalAlignment="Top" Click="orders_Click"  Background="#FF1F2421" Foreground="#FFDCE1DE" Width="208" Height="39" FontSize="18"/>
        <Image HorizontalAlignment="Left" Height="97" Margin="516,43,0,0" VerticalAlignment="Top" Width="136" Source="/pngegg.png"/>
        <Image HorizontalAlignment="Left" Height="123" Margin="148,30,0,0" VerticalAlignment="Top" Width="216" Source="/W_960_sell-online.png"/>
    </Grid>
</Window>
