<Window x:Class="PL.products.productWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.products"
        mc:Ignorable="d"
        Title="productWindow" Height="450" Width="420" Background="#9CC5A1">
    <Grid x:Name="productAddOrUpdate">
        <Label  x:Name="id_lable" Content=":מספר מזהה" HorizontalAlignment="Left" Margin="248,74,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#1F2421" FontSize="18"/>
        <Label Content=":שם הספר" HorizontalAlignment="Left" Margin="262,132,0,0" VerticalAlignment="Top" Foreground="#1F2421" FontWeight="Bold" FontSize="18"/>
        <Label Content=":מחיר" HorizontalAlignment="Left" Margin="298,182,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#1F2421" FontWeight="Bold"/>
        <Label Content=":קטגוריה" HorizontalAlignment="Left" Margin="272,232,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#1F2421" FontWeight="Bold"/>
        <Label Content=":כמות במלאי" HorizontalAlignment="Left" Margin="248,282,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#1F2421"/>
        <TextBox x:Name="id"  HorizontalAlignment="Left" Margin="100,78,0,0"  TextWrapping="Wrap" Text="{Binding ID, Mode=TwoWay, NotifyOnValidationError=True,ValidatesOnDataErrors=True}" VerticalAlignment="Top" Background="#FFDCE1DE" Width="120" Height="30" MaxLength="6" />
        <TextBox  x:Name="name" HorizontalAlignment="Left" Margin="100,132,0,0" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay, NotifyOnValidationError=True,ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120" Height="30"  MaxLength="20" Background="#FFDCE1DE"/>
        <TextBox  x:Name="price" HorizontalAlignment="Left" Margin="100,182,0,0" TextWrapping="Wrap" Text="{Binding Price, Mode=TwoWay, NotifyOnValidationError=True,ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120" Height="30"  MaxLength="5" Background="#FFDCE1DE" />
        <TextBox x:Name="stock" HorizontalAlignment="Left" Margin="100,282,0,0" TextWrapping="Wrap" Text="{Binding InStock, Mode=TwoWay, NotifyOnValidationError=True,ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120" Height="30"  MaxLength="3" TextChanged="stock_TextChanged" Background="#FFDCE1DE"/>
        <ComboBox  x:Name="categoryComboBox" HorizontalAlignment="Left" SelectedItem="{Binding Category}" Margin="100,232,0,0" VerticalAlignment="Top" Width="120" Height="30" SelectionChanged="categoryComboBox_SelectionChanged" />

        <Button x:Name="Add" Content="הוספה" HorizontalAlignment="Left" Margin="150,370,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="20" Background="#FF216869" Foreground="White" Click="add_click" FontWeight="Bold"/>
        <Button x:Name="Update" Content="עדכון" HorizontalAlignment="Left" Margin="150,370,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="20" Foreground="White" Background="#FF216869" Click="update_click"  FontWeight="Bold"/>
    </Grid>
</Window>
