<Window x:Class="PL.cart.EnterDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.cart"
        mc:Ignorable="d"
        Title="EnterDetailsWindow" Height="450" Width="800">
    <Grid  Background="#FFB0C4B1">
        <StackPanel Width="160" Height="300" VerticalAlignment="Bottom" Margin="516,0,124,20">
            <TextBlock x:Name="name"  Text=":שם פרטי" Width="158" TextAlignment="Right" Height="30" HorizontalAlignment="Stretch"
                           FontSize="18" FontFamily="Narkisim" FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline"/>
            <TextBlock x:Name="email"  Text=":דואר אלקטרוני" Width="159" TextAlignment="Right" Height="34" HorizontalAlignment="Left"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline"/>
            <TextBlock x:Name="customerAddress"  Text=":כתובת משלוח" Width="158" TextAlignment="Right" Height="30" HorizontalAlignment="Stretch"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline"/>
            <TextBlock x:Name="space"  Text="" Width="156" TextAlignment="Right" Height="22" HorizontalAlignment="Stretch"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline"/>
            <TextBlock x:Name="payment"  Text=":פרטי תשלום" Width="128" TextAlignment="Center" Height="36" 
                           FontSize="20" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Italic" Foreground="#FF465153" Background="#FF9AA586" HorizontalAlignment="Right"/>
            <TextBlock x:Name="number"  Text=":מספר כרטיס אשראי" Width="156" TextAlignment="Right" Height="42" 
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" />
            <TextBlock x:Name="date"  Text=":תוקף" Width="59" TextAlignment="Right" Height="40"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" HorizontalAlignment="Left" />
            <TextBlock x:Name="cvv"  Text=":cvv" Width="50" TextAlignment="Right" Height="48"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Width="160" Height="309" VerticalAlignment="Bottom" Margin="400,0,240,27">
            <TextBlock x:Name="Name" Width="171" TextAlignment="Right" Height="27" HorizontalAlignment="Right"
                           FontSize="18" FontFamily="Narkisim" FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline" Background="White" Margin="3,3,3,3"/>
            <TextBlock x:Name="Email" Width="151" TextAlignment="Right" Height="28" HorizontalAlignment="Left"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline" Background="White" Margin="3,3,3,3"/>
            <TextBlock x:Name="CustomerAddress" Width="158" TextAlignment="Right" Height="30" HorizontalAlignment="Stretch"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline" Background="White" Margin="3,3,3,3"/>
            <TextBlock x:Name="Space"  Text="" Width="156" TextAlignment="Right" Height="34" HorizontalAlignment="Stretch"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" TextDecorations="Underline"/>
            <TextBlock x:Name="Payment" Width="60" TextAlignment="Center" Height="23" 
                           FontSize="20" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Italic" Foreground="#FF465153"/>
            <TextBlock x:Name="Number" Width="117" TextAlignment="Right" Height="33" 
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" Background="White" HorizontalAlignment="Left" Margin="3,3,3,3" />
            <TextBlock x:Name="Date" Width="117" TextAlignment="Right" Height="36"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" Background="White" Margin="3,3,3,3" HorizontalAlignment="Left" />
            <TextBlock x:Name="Cvv" Width="115" TextAlignment="Right" Height="34"
                           FontSize="18" FontFamily="Narkisim"  FontWeight="Bold" FontStyle="Normal" Foreground="#FF465153" Background="White" Margin="3,3,3,3" HorizontalAlignment="Left" />

        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="459,34,0,0" TextWrapping="Wrap" Text="פרטים אישיים" VerticalAlignment="Top" Width="322" Height="54" Background="#FF9AA586" TextAlignment="Center" FontSize="45" FontFamily="Tempus Sans ITC" FontStyle="Italic" Foreground="#FF465153"/>
    </Grid>
</Window>
