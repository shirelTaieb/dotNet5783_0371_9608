<Page x:Class="PL.cart.ConfirmDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.cart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmDetailsPage" Background="#FF8FA590">

    <Grid>
        <StackPanel Margin="100,52,100,253" Orientation="Horizontal">
            <StackPanel Width="300">
                <TextBlock Text="{Binding CustomerName}" />
                <TextBlock Text="{Binding CustomerAddress}" />
                <TextBlock Text="{Binding CustomerEmail}" />
            </StackPanel>
            <StackPanel x:Name="customerData" Margin="0,0,0,0" Width="300">
                <TextBlock Text=":שם" TextAlignment="Center" Margin="0,0,30,0" FontSize="30"/>
                <TextBlock Text=":כתובת" TextAlignment="Center" Margin="0,0,30,0" FontSize="30"/>
                <TextBlock Text=":כתובת מייל" TextAlignment="Center" Margin="0,0,30,0" FontSize="30"/>
            </StackPanel>
         

        </StackPanel>
    </Grid>
</Page>
