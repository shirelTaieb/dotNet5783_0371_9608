<Page x:Class="PL.cart.ConfirmDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.cart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmDetailsPage" Background="#FF8FA590">

    <Grid>
        <StackPanel Margin="190,10,10,90">
             <StackPanel>
                <TextBlock Text=":שם" TextAlignment="right" Margin="0,0,30,0" />
                <TextBlock Text=":כתובת" TextAlignment="right" Margin="0,0,30,0" />
                <TextBlock Text=":כתובת מייל" TextAlignment="right" Margin="0,0,30,0" />
            </StackPanel>
             <StackPanel>
                <TextBlock Text="{Binding CustomerName}" />
                <TextBlock Text="{Binding CustomerAddress}" />
                <TextBlock Text="{Binding CustomerEmail}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
