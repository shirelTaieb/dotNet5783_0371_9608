<Page x:Class="PL.cart.ConfirmDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.cart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmDetailsPage" Background="#FF8FA590">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,96,0,178" Orientation="Horizontal" Grid.Column="1">
            <StackPanel x:Name="customerData" Margin="0,0,0,0"  Width="158">
                <TextBlock Text="{Binding CustomerName}"  TextAlignment="Center"  FontSize="20" />
                <TextBlock Text="{Binding CustomerAddress}" TextAlignment="Center"  FontSize="20" />
                <TextBlock Text="{Binding CustomerEmail}"  TextAlignment="Center"  FontSize="20"/>
            </StackPanel>
            <StackPanel Margin="25,0,0,0" Width="152">
                <TextBlock Text=":שם" TextAlignment="Center"  FontSize="20"/>
                <TextBlock Text=":כתובת" TextAlignment="Center"  FontSize="20"/>
                <TextBlock Text=":כתובת מייל" TextAlignment="Center" FontSize="20"/>
            </StackPanel>
        </StackPanel>
        <DataGrid x:Name="final_cartDetails" AutoGenerateColumns="False"  Background="#B0C4B1" EnableRowVirtualization="True"
                  RowDetailsVisibilityMode="VisibleWhenSelected" ItemsSource="{Binding}" Grid.Row="0"  AlternatingRowBackground="#DCE1DE" AlternationCount="2" IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#9CC5A1"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0,1,1,0.5"/>
                    <Setter Property="BorderBrush" Value="#1F2421"/>
                    <Setter Property="HorizontalContentAlignment" Value="center" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="proID"
                    Binding="{Binding ProductID, Mode=TwoWay}"
                    Header="מס' מזהה"
                    Width="110"/>
                <DataGridTextColumn
                    x:Name="NameColumn"
                    Binding="{Binding ProductName}"
                    Header="שם המוצר" 
                    Width="160"/>
                <DataGridTextColumn
                    x:Name="AmountOfItemsColumn"
                    Binding="{Binding Amount}"
                    Header="כמות"
                    Width="80"/>
                <DataGridTextColumn
                    x:Name="PriceColumn"
                    Binding="{Binding Price}"
                    Header="מחיר ליחידה"
                    Width="130"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="cartTotalPrice" FontWeight="Bold" Text="{Binding}" Width="60" Margin="278,5,0,0" Foreground="#FF2E4F2E" HorizontalAlignment="Left" VerticalAlignment="Top"  Visibility="{Binding ElementName=confirm, Path=Visibility}" Grid.Row="1" />
        <TextBlock Foreground="#FF2E4F2E" FontWeight="Bold" Text=":לתשלום" Grid.Row="2" Width="62" TextAlignment="Center" Margin="317,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Height="31"  Visibility="{Binding ElementName=confirm, Path=Visibility}"/>
        <Button Content="אישור הזמנה" HorizontalAlignment="Left"  Grid.Row="1" VerticalAlignment="Top" Background="#FF2E4F2E" BorderBrush="{x:Null}" Click="finalConfirmOrder_Click" Margin="40,3,0,0" Height="32" Width="110"/>


    </Grid>
</Page>
