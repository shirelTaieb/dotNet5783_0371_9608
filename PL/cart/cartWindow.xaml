<Window x:Class="PL.cart.cartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.cart"
        mc:Ignorable="d"
        Title="cartWindow" Height="200" Width="344" Background="#FF8FA590" >
    <Grid Margin="0,0,344,0">
        <StackPanel Margin="78,15,-260,2">
            <TextBlock Text="הוספה לעגלה" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
            <Image MaxHeight="30" MaxWidth="30" Source="{Binding path}"/>
            <TextBlock x:Name="name" Text="{Binding Name}"/>
            <TextBlock x:Name="totalPrice" Text="{Binding}"/>
            <StackPanel Width="20" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button FontFamily="Segoe UI Symbol" Content="&#xE110;" Click="up_Click" />
                <TextBox x:Name="amount" Text="{Binding Path=counter}" />
                <Button FontFamily="Segoe UI Symbol" Content="&#xE1FD;"/>
            </StackPanel>
            
        </StackPanel>
      </Grid>
</Window>
