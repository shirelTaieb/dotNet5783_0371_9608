<Page x:Class="PL.cart.cartListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.cart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="cartListPage">
    <Grid>
        <ListView x:Name="cartListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text ="{Binding TotalPrice}" Width="50"/>
                        <TextBlock Text ="{Binding Price}" Width="50"/>
                        <TextBlock Text ="{Binding Amount}" Width="50"/>
                        <TextBlock Text ="{Binding ProductID}" Width="50"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
